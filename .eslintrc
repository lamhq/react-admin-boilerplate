{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "react-hooks"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEVTOOLS__": true
  },
  "rules": {
    "react/forbid-prop-types": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "react/jsx-props-no-spreading": ["error", {
      "custom": "ignore"
    }]
  }
}